{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda Function for running as worker",
  "Conditions": {
    "IsExternal": {
      "Fn::Equals": [
        {
          "Ref": "IsWorkerExt"
        },
        "yes"
      ]
    }
  },
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Label": {
            "default": "Application Properties"
          },
          "Parameters": [
            "WorkerName",
            "IsWorkerExt"
          ]
        }
      ],
      "ParameterLabels": {
        "WorkerName": {
          "default": "Worker Name for Application?"
        }
      }
    }
  },
  "Parameters": {
    "WorkerName": {
      "Description": "Name for the Lambda Worker.",
      "Type": "String"
    },
    "IsWorkerExt": {
      "AllowedValues": [
        "yes",
        "no"
      ],
      "Default": "yes",
      "Description": "Indicate whether this is an external worker.",
      "Type": "String"
    }
  },
  "Outputs": {
    "FunctionRole": {
      "Description": "Function Group Role for worker",
      "Value": {
        "Fn::GetAtt": [
          "FunctionRole",
          "Arn"
        ]
      },
      "Export": {
        "Name": "FunctionRoleVpc"
      }
    }
  },
  "Resources": {
    "FunctionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "VpcWorker",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "ec2:CreateNetworkInterface",
                    "ec2:DeleteNetworkInterface",
                    "ec2:DescribeNetworkInterfaces"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                },
                {
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Effect": "Allow",
                  "Resource": "arn:aws:logs:*:*:*"
                },
                {
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject"
                  ],
                  "Effect": "Allow",
                  "Resource": "arn:aws:s3:::*"
                }
              ]
            }
          }
        ]
      }
    }
  }
}
